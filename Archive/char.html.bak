  shoulderL: { x: -40, y: 40 },
  shoulderR: { x:  40, y: 40 },
  elbowL:    { x: -70, y: 100 },
  elbowR:    { x:  70, y: 100 },
  handL:     { x: -80, y: 160 },
  handR:     { x:  80, y: 160 },
  hipL:      { x: -20, y: 170 },
  hipR:      { x:  20, y: 170 },
