/* ---------------------------------------
   6.3) FOOTER
--------------------------------------- */

.footer-section {
  flex: 1 1 16.666%;
  /* 1/6 */
  display: flex;
  align-items: center;
  transition: all .3s ease;
}


/* stage 1: only next button, center it */
.footer-section.stage-1 {
  justify-content: center;
}

.footer-section.stage-1 .back-btn {
  display: none;
}

/* stage 2: two buttons side-by-side, centered */
